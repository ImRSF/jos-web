<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head.ejs') %>

<!-- Custom styles for this page -->
<link rel="stylesheet" href="../css/custom/our-team.css">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../includes/sidebar.ejs') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <%- include('../includes/topbar.ejs') %>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container text-center">
                    <div class="row">
                        <div class="col-md-12 headding-title">
                            <h1>ISS Department</h1>
                        </div>
                    </div>
                    <div class="row">
                        <% for (let user of users) { %>
                        <div class="col-md-4 col-sm-4 col-xs-12 team-box">
                            <div class="team-boxs">
                                <img src="../<%= user.AccountImage %>">
                                <h4><%= user.PersonnelFname + " " + user.PersonnelLname %></h4>
                                <Strong><%= user.UserGroupName %></Strong>
                                <h5><%= user.PersonnelPosition %></h5>
                                <p><%= user.AccountDescription %>.</p>
                                <% if(userGroupName === "Admin" || userGroupName === "SQA" || userGroupName === "SU") { %>
                                    <div class="text-center">
                                        <div class="dropdown" data-personnelID="<%= user.PersonnelID %>">
                                            <button class="btn btn-primary dropdown-toggle" type="button"
                                                id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">
                                                View Job Orders
                                            </button>
                                            <div class="dropdown-menu user-profile" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item" href="/jobs/job-orders?statusID=3&personnelId=<%= user.PersonnelID %>" target="_blank">
                                                    <span
                                                        class="badge badge-pill badge-danger user-profile-JOServed"></span>
                                                    SERVED</a>
                                                <a class="dropdown-item" href="/jobs/job-orders?statusID=1&personnelId=<%= user.PersonnelID %>" target="_blank">
                                                    <span
                                                        class="badge badge-pill badge-danger user-profile-JOSubmitted"></span>
                                                    SUBMITTED</a>
                                                <a class="dropdown-item"  href="/jobs/job-orders?statusID=5&personnelId=<%= user.PersonnelID %>" target="_blank">
                                                    <span
                                                        class="badge badge-pill badge-danger user-profile-JOPending"></span>
                                                    PENDING</a>
                                                <a class="dropdown-item"  href="/jobs/job-orders?statusID=2&personnelId=<%= user.PersonnelID %>" target="_blank">
                                                    <span
                                                        class="badge badge-pill badge-danger user-profile-JOReturned"></span>
                                                    RETURNED</a>
                                                <a class="dropdown-item"  href="/jobs/job-orders?statusID=4&personnelId=<%= user.PersonnelID %>" target="_blank">
                                                    <span
                                                        class="badge badge-pill badge-danger user-profile-JOCancelled"></span> 
                                                    CANCELLED</a>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                                <!-- <button class="btn">Read More</button> -->
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>


                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../includes/footer.ejs') %>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <%- include('../includes/modal-logout.ejs') %>
        
        <!-- Bootstrap core JavaScript-->
        <%- include('../includes/main-js.ejs') %>
        <!-- Page level plugins -->
        <!-- Page level custom scripts -->

        <!-- Custom JavaScript -->
        <!-- Production -->
        <!-- <script src="/js/custom/misc.bundle.js"></script>
        <script src="/js/custom/auth/iss-department.bundle.js"></script> -->

        <!-- Development -->
        <script type="module" src="/js/custom/misc.js"></script>
        <script type="module" src="/js/custom/auth/iss-department.js"></script>
</body>

</html>