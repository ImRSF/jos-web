<!DOCTYPE html>
<html lang="en">

<%- include('../includes/head.ejs') %>

<!-- Custom styles for this page -->
<link rel="stylesheet" href="../vendor/datatables/dataTables.bootstrap4.min.css">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../includes/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('../includes/topbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <a href="/auth/add-account" class="btn-large btn-primary btn-icon-split">
            <span class="icon text-white-50">
              <i class="fas fa-plus-square"></i>
            </span>
            <span class="text">Add Account</span>
          </a>
          <hr>
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Accounts</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered display" id="table-account" style="width: 100%" width="100%"
                  cellspacing="0">
                  <thead>
                    <tr>
                      <th></th>
                      <th><strong>Personnel Initial</strong></th>
                      <th><strong>Date Added</strong></th>
                      <th><strong>User Group</strong></th>
                      <th><strong>Position</strong></th>
                      <th><strong>Status</strong></th>
                      <th><strong>Actions</strong></th>
                    </tr>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
        <input type="hidden" id="inp-userGroupName" value="<%= user[0].UserGroupName %>">
        <!-- /.container-fluid -->
      </div>

      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../includes/footer.ejs') %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include('../includes/modal-logout.ejs') %>
  <%- include('./modal-account-status.ejs') %>
  <%- include('./modal-confirm-deleteAccount.ejs') %>
  <%- include('./modal-account-form.ejs') %>


  <!-- Bootstrap core JavaScript-->
  <%- include('../includes/main-js.ejs') %>
  <!-- Page level plugins -->
  <script src="../vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="../vendor/datatables/dataTables.responsive.min.js"></script>

  <!-- Custom JavaScript -->
  <!-- Production -->
  <!-- <script src="../js/custom/misc.bundle.js"></script>
  <script src="../js/custom/auth/table-account.bundle.js"></script>
  <script src="../js/custom/auth/account.bundle.js"></script> -->

  <!-- Development -->
  <script type="module" src="../js/custom/misc.js"></script>
  <script type="module" src="../js/custom/auth/table-account.js"></script>
  <script type="module" src="../js/custom/auth/account.js"></script>
</body>

</html>