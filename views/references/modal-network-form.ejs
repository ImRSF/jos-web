<div class="modal fade" id="modal-network-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form method="POST" action="/misc/network" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">
                        Add New Network
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <input type="hidden" name="networkId" id="inph-networkId">
                        <div class="form-group row">
                            <label for="inpt-networkName" class="col-sm-3 col-form-label">Network Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="networkName" id="inpt-networkName"
                                    required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txt-networkDescription" class="col-sm-3 col-form-label">Network
                                Description</label>
                            <div class="col-sm-9">
                                <textarea name="networkDescription" class="form-control" id="txt-networkDescription"
                                    required></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" txt-networkRemarks" class="col-sm-3 col-form-label">Remarks</label>
                            <div class="col-sm-9">
                                <textarea name="networkRemarks" class="form-control" id="txt-networkRemarks"
                                    required></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="sel-subCategory" class="col-sm-3 col-form-label">SubCategory</label>
                            <div class="col-sm-9">
                                <select type="text" class="form-control" name="networkCategory"
                                    id="sel-subCategory"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="sel-referenceStatus" class="col-sm-3 col-form-label">Network Status</label>
                            <div class="col-sm-9">
                                <select type="text" class="form-control" name="networkStatus"
                                    id="sel-referenceStatus"></select>
                            </div>
                        </div>
                        <div class="form-group row" id="smallButtons">
                            <div class="col-sm-6">
                                <button type="submit" id="btn-submit-network" class="btn-small btn-primary form-control">Add
                                    Network
                                </button>
                            </div>
                            <div class="col-sm-6">
                                <button type="button" id="btn-cancel-network" data-dismiss="modal"
                                    class="btn-small btn-danger form-control">Cancel
                                </button>
                            </div>
                        </div>
                        <div class="form-group row" id="bigButton">
                            <div class="col-sm-12">
                                <button type="button" data-dismiss="modal" class="btn-small btn-danger form-control">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>